name: Create demo issue

on:
  push:
  
jobs:

  msg:
    runs-on: ubuntu-latest
    steps:
      - run: echo "Simple demo for reusable workflow"
    
  issue:
    uses: labrats-work/actions.common/.github/workflows/create-repo-issue.yml@main
    secrets:
      token: ${{ secrets.PAT }} 
    with:
      title: "Test issue"
      body: "Test body"
